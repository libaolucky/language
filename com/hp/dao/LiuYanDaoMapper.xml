<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hp.dao.LiuyanDao">
  <!-- 添加 -->
  <insert id="insert">
  	insert into liuyan(name,zhuti,content) values(#{name},#{zhuti},#{content})
  </insert>


   <!-- 全查 -->
	<select id="selectAll" resultType="LiuYan">
	 	select * from liuyan  order by id desc limit 5
	</select>
</mapper>